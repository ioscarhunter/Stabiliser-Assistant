<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.starboy.karav.SA">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.starboy.karav.SA.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.starboy.karav.SA.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.DeviceDefault.Light" />
        <activity
            android:name="com.starboy.karav.SA.After_connectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_after_connect"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.starboy.karav.SA.ReceiverActivity"
            android:label="@string/title_activity_reciever" />
        <activity
            android:name="com.starboy.karav.SA.SenderActivity"
            android:label="@string/title_activity_sender" />
    </application>

</manifest>
