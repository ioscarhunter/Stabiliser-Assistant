<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:elevation="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_pure"
        android:clickable="false"
        android:orientation="horizontal"
        android:theme="@style/Base.Theme.AppCompat.Light">

        <Button
            android:id="@+id/colour_indecator"
            android:layout_width="7dp"
            android:layout_height="fill_parent"
            android:background="@color/c_l1"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">

            <RatingBar
                android:id="@+id/DBratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/clear"
                android:backgroundTint="@color/clear"
                android:numStars="5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:progressBackgroundTint="@color/clear"
                android:progressTint="@color/material_blue_grey_800"
                android:rating="5"
                android:secondaryProgressTint="@color/pink_heart"
                android:secondaryProgressTintMode="multiply"
                android:stepSize="1"/>

            <TextView
                android:id="@+id/LeveltextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/DBratingBar"
                android:paddingBottom="2dp"
                android:text="@string/level"
                android:textSize="20sp"/>

            <Chronometer
                android:id="@+id/DBTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/DBLevel"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DBratingBar"
                android:layout_toStartOf="@+id/DBTime"
                android:paddingBottom="2dp"
                android:text="@string/time"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/DBLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DBratingBar"
                android:layout_toEndOf="@+id/LeveltextView"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:text="@string/level_1"
                android:textSize="20sp"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>