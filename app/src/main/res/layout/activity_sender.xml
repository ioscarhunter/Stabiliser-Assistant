<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/discover_rec"
        android:layout_alignStart="@+id/discover_rec"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/wait_for_connect"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/discover_rec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffd5662e"
        android:longClickable="true"
        android:text="Discoverable"
        android:textColor="#FFFFFF"/>

    <FrameLayout
        android:id="@+id/sensor_listener"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/connect_status"
        android:layout_alignParentEnd="true"
        android:background="@color/blue_dark">
    </FrameLayout>

</RelativeLayout>
